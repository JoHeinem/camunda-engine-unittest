<process-application xmlns="http://www.camunda.org/schema/1.0/ProcessApplication"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:schemaLocation="http://www.camunda.org/schema/1.0/ProcessApplication ./../../Schema/ProcessApplication.xsd">
  <process-engine name="foo">
    <job-acquisition>default</job-acquisition>
    <configuration>org.camunda.bpm.container.impl.jboss.config.ManagedJtaProcessEngineConfiguration</configuration>
    <datasource>java:jboss/datasources/ProcessEngine</datasource>
    <properties>
      <property name="jobExecutorAcquisitionName">default</property>
      <property name="history">full</property>
      <property name="isAutoSchemaUpdate">false</property>
      <property name="authorizationEnabled">true</property>
      <property name="jobExecutorDeploymentAware">true</property>
      <property name="jobExecutorActivate">true</property>
    </properties>
    <plugins>
      <plugin>
        <class>org.camunda.spin.plugin.impl.SpinProcessEnginePlugin</class>
      </plugin>
      <!-- ... weitere Plugins -->
    </plugins>
  </process-engine>

  <process-archive name="foo-archive">
    <process-engine>foo</process-engine>
    <properties>
      <property name="isDeleteUponUndeploy">true</property>
      <property name="isScanForProcessDefinitions">true</property>
    </properties>
  </process-archive>


</process-application>